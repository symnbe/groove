<div class="container">
<h2 class="text-center mt-5">New Card</h2>
        <div class="mt-5 mx-auto d-flex justify-content-center">
            <%= form_with model:@post, local:true, class: "col-6" do |f| %>
                <div class="form-group">
                    <%= f.label :title %>
                    <%= f.text_field :title, class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label :url %>
                    <%= f.text_area :url, class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label :category %>
                    <%= f.select :category, Post.categories, class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.submit class: "btn btn-outline-secondary" %>
                </div>
            <% end %>
    </div>
</div>

