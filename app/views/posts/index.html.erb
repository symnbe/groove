<div class="container">
  <h2 class="text-center mt-5">Trend</h2>
  <div class="row mx-auto d-flex justify-content-center mt-5">
    <% @posts.each do |info| %>
        <div class="col-4">
          <div class="card">
            <div class="card-body text-center">
              <h5 class="card-title text-center"><%= info.title.slice(0...10) %> ...</h5>
              <p class="card-text"><%= info.url.slice(0...10) %> ...</p>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>