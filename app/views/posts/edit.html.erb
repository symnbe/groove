
<div class="container">
  <h2 class="text-center mt-5">編集</h2>
  <div class="row">
    <div class="mx-auto d-flex justify-content-center mt-5">
      <%= form_with model: @post, method: :patch, local:true do |f| %>
        <div class="form-group">
          <%= f.label:title %>
          <%= f.text_field:title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label:url %>
          <%= f.text_area:url, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "編集", class: "btn btn-outline-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>