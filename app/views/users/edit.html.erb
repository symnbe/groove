
<h2 class="text-center mt-5"><%= @user.name %></h2>
    
<div class="container">
    <div class="row">
        <div class="col-12">
            <%= form_with model:@user, local:true |f| %>
                <div class="form-group">
                    <%= f.label :name %>
                    <%= f.text_field :name, class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label :introduce %>
                    <%= f.text_area :introduce %>
                </div>
            <% end %>
        </div>
    </div>
</div>